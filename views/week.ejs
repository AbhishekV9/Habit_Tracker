<%const monthNames = ["January", "February", "March", "April", "May", "June",
"July", "August", "September", "October", "November", "December"]; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

     <!-- css link -->
    <link rel="stylesheet" href="css/week.css">
     <!-- bootstrap css link -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

     <!-- google fonts link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
</head>
<body>

    <%- include("header") -%>

    <main>

        <table border="1"> 
            <thead>
                <tr>
                    <th>Habit Name</th>
                    <th><%= new Date().getDate()-6 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate()-5 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate()-4 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate()-3 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate()-2 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate()-1 %>-<%= monthNames[new Date().getMonth()] %></th>
                    <th><%= new Date().getDate() %>-<%= monthNames[new Date().getMonth()] %></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i of habitList){ %>
                    <tr>
                        <th> <%= i.Name %> </th>
                        <% for(let j=0 ;j<i.Days.length;j++) {%>
                            <td>
                                <button>
                                    <%= i.Days[j] %>
                                </button>
                                <div>
                                    <a href="/weekView/update/<%= i.id %>/<%= j %>/Completed ">Completed</a>
                                    <a href="/weekView/update/<%= i.id %>/<%= j %>/Incomplete ">Incomplete</a>
                                    <a href="/weekView/update/<%= i.id %>/<%= j %>/None ">None</a>
                                </div>    
                            
                            </td>
                            
                        <% } %>
                    </tr>

                <% }%>
            </tbody>
        </table>
    </main>
       <!-- bootstrap js link -->
       <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>